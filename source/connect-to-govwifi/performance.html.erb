<div class="govuk-width-container">
  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-third">
        <%= partial 'shared/product/sidebar' %>
      </div>
      <main class="govuk-grid-column-two-thirds" role="main" id="main">

        <h1 class="govuk-heading-l">
          Performance data
        </h1>

        <div class="big-number govuk-!-margin-bottom-5">
        <span class="big-number__value">
          100%
        </span>
          <span class="govuk-visually-hidden">&nbsp;</span>
          <span class="big-number__label govuk-!-font-size-24">
          Service uptime
        </span>
          <span class="govuk-body-s">
          <br> (since 8 November 2021)
        </span>
        </div>

        <div class="data-card">
          <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-half">
              <div class="big-number">
              <span class="big-number__value">
                500k
              </span>
                <span class="govuk-visually-hidden">&nbsp;</span>
                <span class="big-number__label">
                Registered users
              </span>
              </div>
            </div>
            <div class="govuk-grid-column-one-half">
              <div class="big-number">
              <span class="big-number__value">
                5k
              </span>
                <span class="govuk-visually-hidden">&nbsp;</span>
                <span class="big-number__label">
                Registered organisations
              </span>
              </div>
            </div>
            <div class="govuk-grid-column-one-half">
              <div class="big-number">
              <span class="big-number__value">
                80k
              </span>
                <span class="govuk-visually-hidden">&nbsp;</span>
                <span class="big-number__label">
                Daily active users
              </span>
              </div>
            </div>
            <div class="govuk-grid-column-one-half">
              <div class="big-number">
              <span class="big-number__value">
                20k
              </span>
                <span class="govuk-visually-hidden">&nbsp;</span>
                <span class="big-number__label">
                Daily roaming users
              </span>
              </div>
            </div>
          </div>

          <p class="govuk-body-s">(since August 2016)</p>
        </div>
      </main>
    </div>
  </div>
</div>